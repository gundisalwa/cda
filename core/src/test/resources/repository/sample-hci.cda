        <Connection id="1" type="hds.hci">
            <Url>http://10.76.16.60:8080/</Url>
			<Property name="HciUser"></Property>
			<Property name="HciPassword"></Property>
        </Connection>
    </DataSources>
 
 	<DataAccess id="2" connection="1" type="hci" access="public">
