			 	<query>queryString</query>
			 	<schemaName>TestIndex</schemaName>
				<facetRequests>
				 	 <facet field="facet-field-name" minCount="0" maxCount="0">
				     	<termFilter>termFilterString</termFilter>
				     	<termFilter>termFilterString</termFilter>
					</facet>
				</facetRequests>
			</HCISearch>]]>
		</Query>
    </DataAccess>
</CDADescriptor>
